{
  "manifest_version": 2,
  "name": "Молодёжный инициативный центр",
  "description": "Ссылка для открытия http://ulmic.ru",
  "version": "0.1.0",

  "permissions": [
    "tabs",
    "http://*/*"
  ],

  "browser_action": {
    "default_icon": "images/logo.png"
  },
  "web_accessible_resources": [
    "images/mini_logo_mic.png"
  ],
  "background": {
    "scripts": [
      "scripts/background.js"
    ]
  }
}
